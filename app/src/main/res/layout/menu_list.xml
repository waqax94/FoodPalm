<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/fields"
    android:minHeight="100dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/toolbar_color"
        android:id="@+id/menu_view"
        android:focusable="false"
        android:focusableInTouchMode="false"
        />

    <ImageView
        android:layout_margin="3dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/menu_item_img"
        android:layout_below="@id/menu_view"
        android:scaleType="centerCrop"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:src="@mipmap/loginreg"/>

    <TextView
        android:id="@+id/menu_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@id/menu_item_img"
        android:layout_marginTop="10dp"
        android:text="The Cheese Burger"
        android:textColor="@color/menu_name_color"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/menu_item_description"
        android:layout_width="200dp"
        android:layout_height="39dp"
        android:layout_marginLeft="3dp"
        android:layout_below="@id/menu_item_name"
        android:layout_toRightOf="@id/menu_item_img"
        android:text="The Cheese Burger"
        android:layout_marginRight="5dp"
        android:textColor="@color/menu_det_color"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/menu_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/menu_item_description"
        android:layout_toRightOf="@id/menu_item_img"
        android:text="Rs. 1045"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="13dp"/>

    <TextView
        android:id="@+id/menu_item_discount"
        android:text="-99%"
        android:layout_marginTop="7dp"
        android:layout_marginRight="13dp"
        android:layout_width="40dp"
        android:layout_height="18dp"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:textSize="15dp"
        android:textColor="@color/toolbar_color"
        android:background="@drawable/discount_bg"/>

    <Button
        android:text="+"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp"
        android:id="@+id/addbtn"
        android:background="@drawable/addbutton_bg"/>


</RelativeLayout>