<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.foodpalm.foodpalm.Activities.MenuActivity"
    tools:showIn="@layout/app_bar_menu">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/no_item_text"
        android:gravity="center"
        android:text="No Item to Show"
        android:textColor="@color/p_button_color"
        android:fontFamily="@string/action_settings"
        android:textStyle="bold"
        android:textSize="30dp"/>

    <ListView
        android:layout_marginLeft="1.5pt"
        android:layout_marginRight="1.5pt"
        android:layout_marginTop="10dp"
        android:id="@+id/menu_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/transparent"
        android:dividerHeight="5dp"/>

</RelativeLayout>
