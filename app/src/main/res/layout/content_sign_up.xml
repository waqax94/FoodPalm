<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.foodpalm.foodpalm.Activities.SignUpActivity"
    tools:showIn="@layout/activity_sign_up">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SIGN UP NOW"
        android:textSize="25dp"
        android:id="@+id/signup_heading"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:textColor="@color/grey"/>

    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:padding="5dp"
        android:layout_below="@+id/signup_heading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:id="@+id/f_name"
        android:background="@drawable/fields"
        android:hint="First Name"
        android:inputType="text"
        android:textColorHint="@color/grey"
        android:textAlignment="center"
        android:fontFamily="casual"
        />

    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:padding="5dp"
        android:layout_below="@+id/f_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/l_name"
        android:background="@drawable/fields"
        android:hint="Last Name"
        android:inputType="text"
        android:textColorHint="@color/grey"
        android:textAlignment="center"
        android:fontFamily="casual"
        />

    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:padding="5dp"
        android:layout_below="@+id/l_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/usr_email"
        android:background="@drawable/fields"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/grey"
        android:textAlignment="center"
        android:fontFamily="casual"
        />

    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:padding="5dp"
        android:layout_below="@+id/usr_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/usr_psw"
        android:background="@drawable/fields"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="@color/grey"
        android:textAlignment="center"
        android:fontFamily="casual"
        />

    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:padding="5dp"
        android:layout_below="@+id/usr_psw"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/c_user_psw"
        android:background="@drawable/fields"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textColorHint="@color/grey"
        android:textAlignment="center"
        android:fontFamily="casual"
        />

    <Spinner
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:layout_below="@id/c_user_psw"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/city"
        android:background="@drawable/fields"
        android:spinnerMode="dialog"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/city"
        android:layout_marginTop="30dp"
        android:id="@+id/register_btn"
        android:text="Register"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:background="@drawable/signup_btn"
        android:onClick="signupProcessing"
        />

</RelativeLayout>
