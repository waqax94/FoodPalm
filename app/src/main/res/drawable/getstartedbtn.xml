<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/p_colorPrimaryDark" />
            <stroke android:width="3dp" android:color="@color/p_colorPrimaryDark" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/p_colorPrimaryDark" />
            <stroke android:width="3dp" android:color="@color/p_colorPrimaryDark" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/toolbar_color" />
            <stroke android:width="3dp" android:color="#fff" />
        </shape>
    </item>
</selector>